<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

    <persistence-unit name="unitname">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <non-jta-data-source>java:comp/env/jdbc/BlogJpa</non-jta-data-source>
        <class>hu.schonherz.training.pojo.BaseEntity</class>
        <class>hu.schonherz.training.pojo.Blog</class>
        <class>hu.schonherz.training.pojo.Comment</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto"
                      value="update"/> <!--first time if tables not exists set value to 'create', and exclude all packages only pojo not -->
            <property name="hibernate.default_schema" value="public"/>
        </properties>

    </persistence-unit>
</persistence>